<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:keepScreenOn="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00695c">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="262dp"
                android:layout_height="262dp"
                android:id="@+id/imageView"
                android:src="@mipmap/iczonar_launcher"
                android:layout_gravity="center_horizontal|bottom"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Descubramos juntos!!!"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="35dp" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Signup or Login with:"
                android:id="@+id/textView2"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="@dimen/com_facebook_share_button_text_size"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="0.05" />

            <Button
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:text="Numero celular"
                android:id="@+id/btnLoginCelular"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:onClick="setListFooter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Login or signup Via email"
                android:id="@+id/textView3"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="@dimen/com_facebook_share_button_text_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
